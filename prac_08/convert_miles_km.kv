BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            on_text: app.convert_miles
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
#    Button:
#        text: "Convert miles to km"
#        on_press: app.convert_miles(input_number.text)
    Label:
        id: output_label
        font_size: 48
        text: app.result
        text: '54.717'
        color: 'yellow'

